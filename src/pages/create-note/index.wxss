@import '../../style/weatherCard.wxss';

page {
    background: #f6f6f6;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.container {
    height: 100%;
}

.text-area {
    width: 90%;
    height: 30%;
    margin-top: 5%;
    box-sizing: border-box;
    border-radius: 0 40rpx 0 40rpx;
    background: #fff;
    padding: 30rpx;
    box-shadow: 0 4rpx 12rpx 0 rgba(0, 0, 0, 0.1);
}
.text-area textarea {
    width: 100%;
    height: 100%;
    word-break: break-all;
}

.weather-list {
    width: 100%;
    height: 62%;
}

.choose-mood {
    width: 100%;
    margin-top: 30rpx;
    text-align: center;
    color: #000;
    font-size: 26rpx;
    line-height: 30rpx;
}

.tool-bar {
    width: 100%;
    height: 8%;
    border-top: 2rpx solid #ccc;
}
