@import '../../style/weatherCard.wxss';

page {
    background: #f6f6f6;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.container {
    height: 100%;
}

.text-area {
    width: 90%;
    height: 30%;
    margin-top: 5%;
    box-sizing: border-box;
    border-radius: 0 40rpx 0 40rpx;
    background: #fff;
    padding: 30rpx;
    box-shadow: 6rpx 6rpx 16rpx 0 rgba(0, 0, 0, 0.1);
}
.text-area textarea {
    width: 100%;
    height: 88%;
    word-break: break-all;
    font-size: 30rpx;
    color: #333;
}
.text-area .limit {
    width: 100%;
    height: 12%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    color: #a1a1a1;
    font-size: 26rpx;
}

.weather-container {
    width: 90%;
    height: 62%;
    display: flex;
    flex-direction: column;
}
.weather-container p {
    width: 100%;
    text-align: left;
    color: #a1a1a1;
    font-size: 26rpx;
    line-height: 30rpx;
    margin: 20rpx 0;
}
.weather-container .mood-tips {
    text-align: center;
}
.weather-container .weather-swiper {
    height: 210px;
}
.weather-container .word {
    color: #fff;
    position: absolute;
    font-size: 26rpx;
    right: 30rpx;
    bottom: 20rpx;
}

.tool-bar {
    width: 100%;
    height: 8%;
    border-top: 2rpx solid #ccc;
}
