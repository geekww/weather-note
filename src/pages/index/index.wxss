page {
    background: #f8f8f8;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.footer {
    position: fixed;
    bottom: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.create-note {
    width: 260rpx;
    height: 80rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    background: linear-gradient(to right, #4dcdf4, #3DB2F9);
    box-shadow: 0 4px 10px rgba(15, 37, 64, 0.2);
}
